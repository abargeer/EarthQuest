#:import webbrowser webbrowser

WindowManager:
   MainWindow:
   Registration:
   Login:
   SecondWindow:
   FourthWindow:
   FifthWindow:

<MainWindow>:

   name: "main"

   GridLayout:
      cols:1

      Label:
         font_name: 'Arial'
         font_size: 30
         text: "Welcome to EarthQuest "

      GridLayout:
         cols:2

         Button:
            background_color: (0,1,0,1)
            size_hint: 0.6,0.1
            pos_hint: {"x":0.5, "bottom":1}
            text: "Login"
            on_press:
               root.btn ()
               app.root.current="login"

      Button:
         background_color: (0,1,0,1)
         text: "Don't have a User? Register Here"
         on_press:
            root.btn ()
         on_release:
            app.root.current="registration"

<Registration>:
   name: "registration"
   username: username
   password: password

   GridLayout:
      cols: 2

      Label:
         font_name: 'Arial'
         size_hint: 0.6,0.1
         pos_hint: {"x":1, "top":0.1}
         text: "Username: "

      TextInput:
         id: username
         size_hint: 0.6,0.1
         multiline: False

      Label:
         font_name: 'Arial'
         size_hint: 0.6,0.1
         pos_hint: {"x":1, "y":0.1}
         text: "Password: "

      TextInput:
         id: password
         size_hint: 0.6,0.1
         multiline: False

      Button:
         background_color: (0,1,0,1)
         size_hint: 0.6,0.1
         pos_hint: {"x":0.5, "bottom":1}
         text: "Register"
         on_press:
            root.btn ()
            app.root.current="main"

<Login>:
   name: "login"
   username: username
   password: password

   GridLayout:
      cols: 2

      Label:
         font_name: 'Arial'
         size_hint: 0.6,0.1
         pos_hint: {"x":1, "top":0.1}
         text: "Username: "

      TextInput:
         id: username
         size_hint: 0.6,0.1
         multiline: False

      Label:
         font_name: 'Arial'
         size_hint: 0.6,0.1
         pos_hint: {"x":1, "y":0.1}
         text: "Password: "

      TextInput:
         id: password
         size_hint: 0.6,0.1
         multiline: False

      Button:
         background_color: (0,1,0,1)
         size_hint: 0.6,0.1
         pos_hint: {"x":0.5, "bottom":1}
         text: "Login"
         on_press:
            root.email_alert("EarthQuest","You logged in!", "5186033790@vtext.com")
            if root.btn (username)==True: app.root.current="second"



<SecondWindow>:
   name: "second"
   GridLayout:

      cols:1

      Button:
         background_color: (0,0.5,0.5,1)
         text: "Start Game"
         on_release:
            app.root.current="fourth"

      Button:
         background_color: (0.65,0.5,0.35,1)
         text: "Rules"
         on_release:
            webbrowser.open ("https://docs.google.com/document/d/14AFJKLjzIi7aNLk3Ha9Xi5CenjapeTvJWaU1RDsc_Co/edit")

      Button:
         background_color: (0,0.5,0,1)
         text: "Game Description"
         on_release:
            webbrowser.open ("https://docs.google.com/document/d/1dxJ_uf5RGEWqDSpaDX7eimr6SEViRA8v6-O68nrclnw/edit")




<FourthWindow>:
   name: "fourth"
   city:city
   state:state
   code:code
   character:character
   phone:phone

   GridLayout:
      cols: 2

      Label:
         font_name: 'Arial'
         size_hint: 0.6,0.1
         pos_hint: {"x":1, "y":0.1}
         text: "Type in a City: "

      TextInput:
         id: city
         size_hint: 0.6,0.1
         multiline: False

      Label:
         font_name: 'Arial'
         size_hint: 0.6,0.1
         pos_hint: {"x":1, "y":0.1}
         text: "Type in a State initials: "

      TextInput:
         id: state
         size_hint: 0.6,0.1
         multiline: False

      Label:
         font_name: 'Arial'
         size_hint: 0.6,0.1
         pos_hint: {"x":1, "y":0.1}
         text: "Type in your game code: "

      TextInput:
         id: code
         size_hint: 0.6,0.1
         multiline: False

      Label:
         font_name: 'Arial'
         size_hint: 0.6,0.1
         pos_hint: {"x":1, "y":0.1}
         text: "Type in your character name: "

      TextInput:
         id: character
         size_hint: 0.6,0.1
         multiline: False

      Label:
         font_name: 'Arial'
         size_hint: 0.6,0.1
         pos_hint: {"x":1, "y":0.1}
         text: "Type in your phone number: "

      TextInput:
         id: phone
         size_hint: 0.6,0.1
         multiline: False

      Button:
         background_color: (0,0.5,0.5,1)
         text: "Return to Main Window"
         on_release:
            app.root.current="second"

      Button:
         text: "Sumbit"
         on_release:
            root.btn3 (city, state, code, character, phone)
            app.root.current="fifth"
            #webbrowser.open ("https://www.google.com/maps/place/"+city+",+"+state)
            #https://www.google.com/maps/place/Albany,+NY

<FifthWindow>:
   name: "fifth"
   phrase:phrase
   namer:namer

   GridLayout:
      cols: 2

      Label:
         font_name: 'Arial'
         size_hint: 0.6,0.1
         pos_hint: {"x":1, "y":0.1}
         text: "CHAT: "

      TextInput:
         id: phrase
         size_hint: 0.6,0.1
         multiline: False

      Label:
         font_name: 'Arial'
         size_hint: 0.6,0.1
         pos_hint: {"x":1, "y":0.1}
         text: "NAME: "

      TextInput:
         id: namer
         size_hint: 0.6,0.1
         multiline: False



      Button:
         text: "Sumbit"
         on_release:
            credentials_reader=root.btn (namer, phrase)



